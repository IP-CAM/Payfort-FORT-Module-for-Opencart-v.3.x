			applePayButton.cartPage();
		}

	});
	var applePayButton = {
		productPage: function(){
			var button =' <button type="button" value="{{ button_confirm }}" id="applePay" class="{{ apple_pay_button_class }} hide-me"></button>';
			
			$('#button-cart').after(button);
		},
